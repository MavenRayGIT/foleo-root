%%SELECTOR%%{
  width: {{ design.style.width.style }};
  height: {{ design.style.height.style }};
--blur: {{ design.style.blur }}px;
  --background: {{ design.style.color }};
  --animation: {{ content.animation.type }};
  --x: {{ content.animation.position_x.style }};
  --y: {{ content.animation.position_y.style }};
  --duration: {{ content.animation.duration.style }};
  --delay: {{ content.animation.delay.style }};
  --easing: {{ content.animation.css_easing }};
}