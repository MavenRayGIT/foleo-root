{% if content.content.link %}
  {{ macros.linkStart(content.content.link, 'dan-blade-reveal__anchor') }}
  <span class="dan-blade-reveal__inner" data-content="{{ content.content.text|escape('html_attr') }}">{{ content.content.text|raw }}</span>
  {{ macros.linkEnd() }}
{% else %}
  <span class="dan-blade-reveal__inner" data-content="{{ content.content.text|escape('html_attr') }}">{{ content.content.text|raw }}</span>
{% endif %}